<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp">

        //HARDCODED TAGS

        <TextView
            android:id="@+id/txt_Measure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:text="Measure: "
            android:textSize="26dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_MeasureNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:text="Note: "
            android:textSize="26dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_Measure" />

        //EDIT TEXTS

        <EditText
            android:id="@+id/edit_Measure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="enter sugar level"
            android:textSize="26dp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_Measure"
            app:layout_constraintStart_toEndOf="@+id/txt_Measure"
            app:layout_constraintTop_toTopOf="@+id/txt_Measure" />

        <EditText
            android:id="@+id/edit_MeasureNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="enter note to measure"
            android:textSize="26dp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_MeasureNote"
            app:layout_constraintStart_toEndOf="@+id/txt_MeasureNote"
            app:layout_constraintTop_toTopOf="@+id/txt_MeasureNote" />
        <Button
            android:id="@+id/btn_AddNewMeasure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/edit_MeasureNote"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            android:text="INSERT NEW MEASURE"/>


    </android.support.constraint.ConstraintLayout>



</merge>