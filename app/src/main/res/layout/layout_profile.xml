<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp">

        //HARDCODED TAGS

        <TextView
            android:id="@+id/txt_UpperSugarLvl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:text="Upper sugar level: "
            android:textSize="26dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_LowerSugarLvl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:text="Lower sugar level: "
            android:textSize="26dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_UpperSugarLvl" />

        <TextView
            android:id="@+id/txt_Age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:text="Age: "
            android:textSize="26dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_LowerSugarLvl" />

        //EDIT TEXTS

        <EditText
            android:id="@+id/edit_UpperSugarLvl"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter name"
            android:textSize="26dp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_UpperSugarLvl"
            app:layout_constraintStart_toEndOf="@+id/txt_UpperSugarLvl"
            app:layout_constraintTop_toTopOf="@+id/txt_UpperSugarLvl" />

        <EditText
            android:id="@+id/edit_LowerSugarLvl"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter name"
            android:textSize="26dp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_LowerSugarLvl"
            app:layout_constraintStart_toEndOf="@+id/txt_LowerSugarLvl"
            app:layout_constraintTop_toTopOf="@+id/txt_LowerSugarLvl" />

        <EditText
            android:id="@+id/edit_Age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter name"
            android:textSize="26dp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_Age"
            app:layout_constraintStart_toEndOf="@+id/txt_Age"
            app:layout_constraintTop_toTopOf="@+id/txt_Age" />
        <Button
            android:id="@+id/btn_SetNewProfileData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/edit_Age"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            android:text="SET NEW PROFILE DATA"/>


    </android.support.constraint.ConstraintLayout>



</merge>